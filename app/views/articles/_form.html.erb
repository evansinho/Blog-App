<% if article.errors.any? %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h3><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h3>
            <div class="panel-body">
              <ul>
                <% article.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>      
      </div>
    </div>
<% end %>

<div class="row">
  <div class="col-xl-12">
    <%= form_with(model: article, local: true, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :title %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :title, class: "form-control", placeholder: "Enter Title of Article", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :body %>
        </div>
          <div class="col-sm-8">
            <%= form.text_area :body, rows: 10, class: "form-control", placeholder: "Enter Body of Article", autofocus: true %>
          </div>
      </div>

      <div class="form-group actions">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit  class: "btn btn-primary btn-lg"%>    
        </div>
      </div>
      <% end %>
      <div class="col-xs-4 col-xs-offset-4">
        [<%= link_to 'Cancel request and return to article listings', articles_path %>]
      </div>
    </div>
  </div>
 